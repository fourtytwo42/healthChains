{
  "name": "healthcare-blockchain-backend",
  "version": "1.0.0",
  "description": "Backend server for healthcare blockchain assessment",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "compile:contract": "npx hardhat compile",
    "deploy:local": "npx hardhat run scripts/deploy.js --network localhost",
    "deploy:hardhat": "npx hardhat run scripts/deploy-hardhat.js --network localhost",
    "test:contract": "npx hardhat test",
    "test:backend": "bash scripts/start-hardhat-node.sh && npm run deploy:hardhat && mocha test/services/**/*.test.js test/integration/**/*.test.js --timeout 60000 --exit; EXIT_CODE=$?; bash scripts/stop-hardhat-node.sh; exit $EXIT_CODE",
    "test:all": "npm run test:contract && npm run test:backend"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.1",
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "redis": "^4.6.12",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "web3": "^4.3.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.2",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.2",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.1.3",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "chai": "^4.3.10",
    "hardhat": "^2.19.4",
    "hardhat-gas-reporter": "^1.0.10",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.2",
    "sinon": "^17.0.1",
    "sinon-chai": "^3.7.0",
    "solidity-coverage": "^0.8.16",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "blockchain",
    "web3",
    "express",
    "healthcare"
  ],
  "author": "",
  "license": "MIT"
}
